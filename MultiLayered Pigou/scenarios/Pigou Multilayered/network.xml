<network name="pigou test network">
   <nodes>
      <node id="1" x="-15000.000001" y="0"/>
      <node id="2" x="-15000" y="0"/>
      <node id="3" x="-4698" y="1711"/>     
      <node id="4" x="-4698" y="-1711"/>     
      <node id="5" x="0" y="0"/>
      <node id="6" x="0.000001" y="0"/>
   </nodes>
   <links capperiod="01:00:00">
	  <!-- link 1 is the starting link and taxis will start the trip from the end of the link. It will go until the end of the link 6. For that reason and for estetics
			I set the length of the links 1 and 6 to be extremly small in order not to affect the calculations-->
      <link id="1" from="1" to="2" length="1.00" capacity="36000" freespeed="27.78" permlanes="1"  modes="car"/>      
      <link id="2" from="2" to="3" length="10000.00" capacity="3600" freespeed="27.78" permlanes="1" modes="car" />    
      <link id="3" from="2" to="4" length="10000.00" capacity="3600" freespeed="57.78" permlanes="1" modes="car" />    
      <link id="4" from="3" to="5" length="5000.00" capacity="1000" freespeed="27.78" permlanes="1" modes="car" />      
      <link id="5" from="4" to="5" length="5000.00" capacity="1000" freespeed="57.78" permlanes="1"  modes="car"/>     
      <link id="6" from="5" to="6" length="1.00" capacity="36000" freespeed="27.78" permlanes="1" modes="car" />

      <!-- Above links are links for cars only. Below links will be links for taxis only. This is an attempt of having multi-layered network with nodes as connecting points.-->
      <link id="11" from="1" to="2" length="1.00" capacity="36000" freespeed="27.78" permlanes="1"  modes="taxi"/>      
      <link id="12" from="2" to="3" length="10000.00" capacity="3600" freespeed="27.78" permlanes="1" modes="taxi" />    
      <link id="13" from="2" to="4" length="10000.00" capacity="3600" freespeed="57.78" permlanes="1" modes="taxi" />    
      <link id="14" from="3" to="5" length="5000.00" capacity="1000" freespeed="27.78" permlanes="1" modes="taxi" />      
      <link id="15" from="4" to="5" length="5000.00" capacity="1000" freespeed="57.78" permlanes="1"  modes="taxi"/>     
      <link id="16" from="5" to="6" length="1.00" capacity="36000" freespeed="27.78" permlanes="1" modes="taxi" />
   </links>
</network>
